  <ion-tabs class="tabs-icon-only tabs-positive tabs-top>
    <ion-tab title="提问解答">
      <ion-content>
        <ion-fab right edge>
            <button ion-fab mini><ion-icon name="add"></ion-icon></button>
            <ion-fab-list side="left">
              <button ion-fab (click)="clickNewPost()"><ion-icon name="add"></ion-icon></button>
              <button ion-fab (click)="Refresh()">刷新</button>
            </ion-fab-list>
          </ion-fab>
          <button ion-item *ngFor="let bbs of bbslist" type="item-text-wrap" (click)="viewbbsDetail(bbs.id)">
            <h2>{{bbs.id}}</h2>
            <h2>{{bbs.title}}</h2>
          
          </button>
      </ion-content>
    </ion-tab>

    <ion-tab title="自组活动">
      <ion-content>
        <ion-list>
        <ion-fab right edge>
            <button ion-fab mini><ion-icon name="add"></ion-icon></button>
            <ion-fab-list side="left">
              <button ion-fab>周边游</button>
            </ion-fab-list>
          </ion-fab>
          <button ion-item *ngFor="let bbs of bbslist" type="item-text-wrap" (click)="viewbbsDetail(bbs.id)">
            <h2>{{bbs.id}}</h2>
            <h2>{{bbs.title}}</h2>
          
          </button>

        </ion-list>
        <ion-infinite-scroll (ionInfinite)="loadMore($event)" threshold="100px" immediate-check="false">
        <ion-infinite-scroll-content
          loadingText="Loading more data...">
        </ion-infinite-scroll-content>
        </ion-infinite-scroll>
        </ion-content>
    </ion-tab>
  </ion-tabs>


